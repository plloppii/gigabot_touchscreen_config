[Unit]
Description=Handles calling ~/klipper_config/reload_ui.py on first boot
Type=idle

[Service]
User=root
WorkingDirectory=/home/pi/klipper_config/scripts
ExecStart=su - pi -c "/usr/bin/python3 /home/pi/gigabot_touchscreen_config/klipper/reload.py --first-boot"

[Install]
WantedBy=multi-user.target